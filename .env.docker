# Docker Environment Configuration
# Copy this to .env when running with Docker Compose

# PostgreSQL Database Configuration (Docker internal network)
# Used by both HeyBoss app and Waline
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=heyboss
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123

# HeyBoss Database URL
DATABASE_URL=postgresql://postgres:postgres123@postgres:5432/heyboss?sslmode=disable

# Waline Database Configuration
WALINE_DB_TYPE=pg
WALINE_DB_HOST=postgres
WALINE_DB_PORT=5432
WALINE_DB_NAME=heyboss
WALINE_DB_USER=postgres
WALINE_DB_PASSWORD=postgres123
WALINE_DB_TABLE_PREFIX=wl_

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here
TELEGRAM_CHAT_ID=your-telegram-chat-id-here

# Cloudflare Turnstile Configuration
TURNSTILE_SECRET_KEY=your-turnstile-secret-key-here
NEXT_PUBLIC_TURNSTILE_SITE_KEY=your-turnstile-site-key-here

# Application Configuration
NODE_ENV=production
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-change-this

# Waline Integration
WALINE_URL=http://waline:8360
WALINE_SITE_NAME=HeyBoss.WTF
WALINE_SITE_URL=http://localhost:3000
WALINE_AUTHOR_EMAIL=admin@heyboss.wtf
WALINE_JWT_TOKEN=your-waline-jwt-secret-change-this
WALINE_SECURE_DOMAINS=localhost,heyboss.wtf